@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Filmes";
}

<h1>Filmes</h1>

<p>
    <a class="btn btn-default" asp-action="Create">Adicionar Filme</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <div class="form-group">
    <label class="form-label mt-4">Filtros</label>
    <div class="form-group">
        <div class="input-group mb-3">
            <select class="form-control" asp-for="MovieGenre" asp-items="Model.Genres" >
                <option value="">Gêneros</option>
            </select>
            <input type="text" class="form-control" asp-for="SearchString" placeholder="Título..." aria-label="Recipient's username" aria-describedby="button-addon2">
            <input class="btn btn-primary" type="submit" value="Filter" />
        </div>
    </div>
    </div>
</form>

<table class="table table-hove">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Visualizar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>