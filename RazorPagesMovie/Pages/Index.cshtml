@page
@model RazorPagesMovie.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<h1>Lista de Filmes</h1>
<hr>
<p>
    <a class="btn btn-primary" asp-page="Create">Adicionar Filme</a>
</p>
<form>
    <p class="form-group-justified">
        Gênero: <select class="form-control" asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">Todos</option>
        </select>
        Título: <input class="form-control" type="text" asp-for="SearchString" class="input-group" placeholder="Pesquisar..."/>
        <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
    </p>
</form>

<table class="table table-hover">
    <thead>
        <tr class="table-active">
            <th>
                <b>#</b>
            </th>
            <th>
                Título
            </th>
            <th>
                Data de lançamento
            </th>
            <th>
                Gênero
            </th>
            <th>
                Valore
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td style="text-align: right">
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.ID">Editar</a>
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.ID">Detalhes</a>
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
